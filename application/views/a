<script type="text/javascript" src="https://www.ignitho.com/js/jquery-2.2.0.min.js"></script> <!-- Main javacript -->
<script type="text/javascript" src="https://www.ignitho.com/js/bootstrap.min.js"></script> <!-- Bootstrap javacript -->
<script type="text/javascript" src="https://www.ignitho.com/js/jquery.bxslider.min.js"></script> <!-- Carousel javacript -->
<script type="text/javascript" src="https://www.ignitho.com/js/jquery-ui.js"></script> <!-- Jquery Ui -->
<script type="text/javascript" src="https://www.ignitho.com/js/jquery.ddslick.js"></script> <!-- Jquery Ui -->
<!-- Custom scripts -->
<script type="text/javascript">

			
		
	// Scroll fixed menu
	$(window).scroll(function () {
		if ($(window).scrollTop() >= 100) {
			$('.fixing').addClass('fixed-menu slideInDown');
		} else {
			$('.fixing').removeClass('fixed-menu slideInDown');
		}
	});
	// Dropdown select
	$('#Archives').ddslick({
		onSelected: function(selectedData){
			//callback function: do something with selectedData;
		}   
	});
	// Carousel Slider
	$('.bxslider').bxSlider({
		minSlides: 3,
		maxSlides: 4,
		slideWidth: 170,
		slideMargin: 10
	});
	// Banner height = viewport height
	$(document).ready(function() {
		windowHeight = $(window).innerHeight();
		$('.full-height-banner').css('min-height', windowHeight+50);
		
		//contact Form validations
		$('#contact-send').on('click', function(){
			var email_Filter = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
			var requirement = $("#txt-requirement").val();
			var name = $("#txt-name").val();
			var company = $("#txt-company").val();
			var mail_id = $("#txt-mail_id").val();
			var location = $("#ddl-location").val();
			$("#request-demo-form input").removeClass('error');
			if(requirement == '')
			{
				$("#txt-requirement").addClass('error').focus(); 
			}
			else if(name == '')
			{
				$("#txt-requirement").removeClass('error');
				$("#txt-name").addClass('error').focus(); 
			}
			else if(company == '')
			{
				$("#txt-name").removeClass('error'); 
				$("#txt-company").addClass('error').focus(); 
			}
			else if(mail_id == '' || !email_Filter.test(mail_id))
			{
				$("#txt-company").removeClass('error'); 
				$("#txt-mail_id").addClass('error').focus(); 
			}
			else if(location == '')
			{
				$("#txt-mail_id").addClass('error');
				$("#txt-location").addClass('error').focus(); 
			}
			else if(grecaptcha.getResponse() == '')
			{
				$("#txt-location").removeClass('error'); 
				$("#recaptcha-anchor").addClass('error').focus(); 
			}
			else
			{
				$('#contact-send').hide();                
                var request = $.ajax({
                    url: "send_mail ",
                    method: "POST",
                    data: {requirement : requirement, name : name, company : company, mail_id : mail_id, action : 'contact' ,'g-recaptcha-response': grecaptcha.getResponse()  },
                    dataType: "html"
                });

                request.done(function (response) {
                    var resp = $.parseJSON(response);
                    if (resp.status == 'success')
                    {						
                        //$("#success-msg p").html(resp.msg);
                        //$("#success-msg").show();
						window.location.href='thankyou'
                    } else
                    {
                        $("#error-msg p").html(resp.msg);
                        $("#error-msg").show();
                    }
                    $('#contact-send').show();
                });

                request.fail(function (jqXHR, textStatus) {
                    $("#error-msg p").html(textStatus);
                    $("#error-msg").show();
                    $('#contact-send').show();
                });
			}
			});
			
			//Download Form validations
		$('#download-send').on('click', function(){
			var email_Filter = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
			var role = $("#txt-role").val();
			var name = $("#txt-full_name").val();
			var company = $("#txt-your_company").val();
			var email_id = $("#txt-email_id").val();
			var website = $("#txt-website").val();
			var name = $("#txt-full_name").val();
			$("#request-demo-form input").removeClass('error');
			
			if(name == '')
			{
				$("#txt-full_name").addClass('error').focus(); 
			}
			else if(email_id == '' || !email_Filter.test(email_id))
			{
				$("#txt-full_name").removeClass('error'); 
				$("#txt-email_id").addClass('error').focus(); 
			}						
			else if(role == '')
			{
				$("#txt-email_id").removeClass('error'); 
				$("#txt-role").addClass('error').focus(); 
			}
			else if(company == '')
			{
				$("#txt-role").removeClass('error');
				$("#txt-your_company").addClass('error').focus(); 
			}
			else if(website == '')
			{
				$("#txt-your_company").removeClass('error'); 
				$("#txt-website").addClass('error').focus(); 
			}
			else if(grecaptcha.getResponse() == '')
			{
				$("#txt-website").removeClass('error'); 
				$("#recaptcha-anchor").addClass('error').focus(); 
			}
			else
			{
				$('#download-send').hide();                
                var request = $.ajax({
                    url: "../send_mail.php",
                    method: "POST",
                    data: {role : role, name : name, company : company, email_id : email_id, website : website, action:'download', 'g-recaptcha-response': grecaptcha.getResponse()  },
                    dataType: "html"
                });

                request.done(function (response) {
                    var resp = $.parseJSON(response);
                    if (resp.status == 'success')
                    {
						window.open('../download.php');
                        $("#success-msg p").html(resp.msg);
                        $("#success-msg").show();
                    } else
                    {
                        $("#error-msg p").html(resp.msg);
                        $("#error-msg").show();
                    }
                    $('#download-send').show();
                });

                request.fail(function (jqXHR, textStatus) {
                    $("#error-msg p").html(textStatus);
                    $("#error-msg").show();
                    $('#download-send').show();
                });
			}
			});
	});
	// Animated Tab
	if($( window ).width()>767){
		var animatedTab =function(){
		var active =$(".banner-tab.active");		
		target = $(active).parent().next("li");		
		if(target.length == 0){
			target = $(active).parent("li").parent("ul");
			target = $(target).children("li:first");			
		}
		/* $(target).children('a').trigger('click');; */
		var target_a = $(target).children('a');
		var target = $(target).children('a').data('target-id');		
		$('.sliding-content').fadeOut(400);		
		$('#'+target).fadeIn(1200);
		
		$('.banner-tab').removeClass('active');
		$(target_a).addClass('active');
		clearInterval(refreshIntervalId); //clear interval
        refreshIntervalId = setInterval(animatedTab,6000); //start it again
	};
		var refreshIntervalId = setInterval(animatedTab,8000);
	}
	$('.banner-tab').on('click',function(){	
		var target = $(this).data('target-id');
		$('.sliding-content').fadeOut(400);
		$('#'+target).fadeIn(1200);
		$('.banner-tab').removeClass('active');
		$(this).addClass('active');
		clearInterval(refreshIntervalId); //clear interval
       // refreshIntervalId = setInterval(animatedTab,6000); //start it again
	});
	// Active and remove class menu
	$('.ignitho-mega').hover(function(e) {
		e.preventDefault(); //prevent the link from being followed
		//$('.ignitho-mega').removeClass('dropdown-border');
		//$(this).addClass('dropdown-border');
	});
		$('#navbar-collapse-grid').on('hide.bs.dropdown', function () {
		$('.dropdown a').removeClass('dropdown-border');
	})
	// Hover dropdown menu	
	$('ul.nav li.yamm-fw').hover(function() {
		$(this).find('.dropdown-menu').stop(true, true).delay(60).fadeIn(500).addClass("activeUi");		
			$(this).find('a.ignitho-mega').addClass("dropdown-border");
		}, function() {
	  $(this).find('.dropdown-menu').stop(true, true).delay(50).fadeOut(500,function(e){
		$('ul.activeUi').prev("a.dropdown-border").removeClass("dropdown-border");
		$('ul.activeUi').removeClass('activeUi');
	});
	});
	//Mobile menu
	$(".menu-btn").click(function () {
		//$('.menu-items').show('slide', {direction: 'right'}, 500);		
		$('.menu-items').toggle( "slide",500 );;
		//$('.menu-items').removeClass('fadeOutLeft');
		$('body').addClass('no-scroll');
		$('.navbar').addClass('scroll');
	});
	$(".menu-close").click(function () {
		//$('.menu-items').removeClass('fadeInLeft');
		//$('.menu-items').addClass('fadeOutLeft');
	});
	$(".menu-close").click(function () {
		$('.menu-items').hide('slide', {direction: 'right'}, 500);
		$('body').removeClass('no-scroll');
	});
	//Mobile menu search
	$(document).ready(function(){
	  $(".menu-btn").click(function(){
			$("body").addClass("overflow-hidden");
	  });
	  $(".scroll-bottom a").click(function() {
			$('html, body').animate({
				scrollTop: $("#solution").offset().top
			}, 2000);
		});
	});
</script>
